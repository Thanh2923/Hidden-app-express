                            <a href="" class="text-danger fw-medium pe-3  border-0 bg-white "><i class="fa-solid fa-user" ></i><%=email%></a>
                            <a href="/logout" class="text-black fw-medium pe-3 text-black border-0 bg-white "><i class="fa-solid fa-user" ></i>Đăng Xuất</a>
                          <% } else { %>
                            <!-- Hiển thị nút đăng ký và đăng nhập nếu không có email trong cookie -->
                            <a href="/register" class="text-black fw-medium pe-3 text-black border-0 bg-white "><i class="fa-solid fa-user" ></i>Đăng Kí</a>
                            <a href="/login" class="text-black fw-medium pe-3 text-black border-0 bg-white "><i class="fa-solid fa-user" ></i>Đăng nhập</a>
